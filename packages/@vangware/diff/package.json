{
	"name": "@vangware/diff",
	"description": "↔️ Deep diffing utility.",
	"version": "1.0.0",
	"author": {
		"email": "hello@vangware.com",
		"name": "Vangware",
		"url": "https://vangware.com"
	},
	"bugs": {
		"email": "issues@vangware.com",
		"url": "https://github.com/vangware/libraries/issues"
	},
	"dependencies": {
		"@vangware/types": "workspace:*"
	},
	"engines": {
		"node": ">=21",
		"pnpm": ">=8"
	},
	"exports": {
		".": "./dist/index.js",
		"./*": "./dist/*"
	},
	"files": [
		"dist"
	],
	"homepage": "https://vangware.com/libraries/vangware_diff",
	"keywords": [
		"typescript",
		"vangware"
	],
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/vangware/libraries.git"
	},
	"scripts": {
		"clean": "rimraf ./dist",
		"compile": "tsc --project ./tsconfig.dist.json",
		"git:pre-push": "run-s --print-label clean compile lint test",
		"lint": "eslint {src,tests}",
		"lint:fix": "eslint {src,tests} --fix",
		"prepublishOnly": "run-s --print-label clean compile prettify",
		"prettify": "prettier --ignore-path=.prettierignore --log-level=warn --write './dist/**/*.{js,ts}'",
		"test": "NODE_OPTIONS='--import tsx --no-warnings' node --test ./tests/*.test.ts"
	},
	"sideEffects": false,
	"type": "module"
}
